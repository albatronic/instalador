{# SERVICOS EN LA PORTADA #}
{% for item in values.serviciosPortada %}
    <div class="service-1 grid_4">
        <div class="tilte">
            <h2>{{item.Titulo}}</h2>
        </div>
        <div class="icon-wrapper"><img src="{{theme}}/{{item.getPathNameImagenN(1)}}" alt=""></div>
        <div class="text"> {{item.Subtitulo}} </div>
        <div class="button-wrapper">
            <a href="{{item.Href.url}}"><span class="normal-button">{{macro.idioma('detalles')}}</span></a>
        </div>
    </div>
{% endfor %}