{% if values.blog.paginacion.totalPaginas > 0 %}
<div id="pagination-wrapper">    
    <div id="pagination">
        <form name="paginacion" id="formPaginacion" method="POST" action="">
            <input name="controller" value="{{values.controller}}" type="hidden" />
            <input name="action" id="action" value="index" type="hidden" />
            <input name="pagina" id="pagina" value="" type="hidden" />
            <input name="anio" id="anio" value="{{values.blog.anio}}" type="hidden" />
            <input name="mes" id="mes" value="{{values.blog.mes}}" type="hidden" />
            <input name="texto" id="texto" value="{{values.blog.texto}}" type="hidden" />
            
            <span>{{macros.idiomas('pagina')}} {{values.blog.paginacion.pagina}} {{macros.idiomas('de')}} {{values.blog.paginacion.totalPaginas}}</span>            
            {% if values.blog.paginacion.pagina > 1 %}
                <a href="#" onclick="$('#pagina').val('{{values.blog.paginacion.pagina-1}}');$('#formPaginacion').submit();" title="{{macros.idiomas('anterior')}}" class="inactive">{{macros.idiomas('anterior')}}</a>                    
            {% endif %}
            {% if values.blog.paginacion.pagina < values.blog.paginacion.totalPaginas %}
                <a href="#" onclick="$('#pagina').val('{{values.blog.paginacion.pagina+1}}');$('#formPaginacion').submit();" title="{{macros.idiomas('siguiente')}}" class="inactive">{{macros.idiomas('siguiente')}}</a>              
            {% endif %}
        </form>
        <div class="line"></div>
    </div>
</div>
{% endif %}