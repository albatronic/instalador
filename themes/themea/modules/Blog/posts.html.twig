<ul class="post-item-wrapper">
    {% for item in values.blog.articulos %}
    <li class="posts fullstyle">
        <div class="featured-thumbnail-wrapper image">
            <div class="date-wrapper">
                <div class="date-wrap">
                    <span>{{item.dia}}</span>
                    <span>{{item.mes}}</span>
                    <span>{{item.anio}}</span>
                </div>
                <span class="triangle"></span>
            </div>

	    {% if item.imagen %}
            <div class="featured-thumbnail">
                <div class="image-wrap">
                    <a class="image-wrapper" href="{{app.path}}/{{theme}}/{{item.imagen}}" data-rel="prettyPhoto[gallery]">
                        <img src="{{app.path}}/{{theme}}/{{item.imagen}}" alt="{{item.titulo}}" title="{{item.titulo}}" />
                        <span class="zoom-icon magnify"></span>
                    </a>
                </div>
            </div>
	    {% endif %}
		
        </div>
        <h2>{{ macro.link(item.titulo,none,item.url.url,item.url.targetBlank) }}</h2>
        <div class="excerpt"> {{item.resumen}} </div>
        <div class="post-info-wrapper">
            <div class="post-icon"></div>
            <div class="post-info">
                <span class="author">
                    <a href="#" rel="author">admin</a>
                </span>
                {#                
                <span class="tags">
                    <a href="#" rel="tag">Australia</a>, <a href="#" rel="tag">Europe</a>
                </span>
                <span class="comment"> 5 Comments </span>
                #}
                <div class="posts-link">
                    {{ macro.link('Leer m√°s',none,item.url.url,item.url.targetBlank) }}
                </div>
            </div>
        </div>
    </li>
    {% else %}
        {{macros.idiomas('noHayEntradas')}}
