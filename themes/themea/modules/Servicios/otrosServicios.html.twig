<div class="h-wrapper h1 grid_12">
    <h2>{{macro.idioma('otrosServicios')}}<span class="line"></span></h2>
</div>
{% for servicio in values.otrosServicios%}
    {% if (app.path ~ urlAmigable) != servicio.Href.url %}
        <div class="service-1 grid_4">
            {% if servicio.PathNameImagenN(1) %}
                <div class="icon">
                    <img src="{{theme}}/{{servicio.PathNameImagenN(1)}}" alt="{{servicio.Titulo}}" title="{{servicio.Titulo}}" />
                </div>
            {% endif %}
            <div class="text">{{ macro.recortaTexto (servicio.ResumenBreve, 100) }}</div>
            <h2>
                {{macro.link(servicio.Titulo,servicio.Titulo,servicio.Href.url,servicio.Href.targetBlank)}}
                <span class="triangle"></span>
            </h2>
        </div>
    {% endif %}
{% endfor %}