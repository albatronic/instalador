{% set nThumbnail = galeriaFotos.bloqueThumbnail|length%}

{% if nThumbnail > 0 %}
    <div id="carrusel">

        <div class="contenidoTop"></div>
        <div class="contenidoInter">
            <h6>{{macro.idioma('galeria')}}</h6>
            <ul class="galeria">
                {% for key, galeria in galeriaFotos.bloqueThumbnail %}
                    <li {% if nThumbnail==key+1 %}class="ultimo"{% endif %}>
                        <a href="{{app.path}}/{{theme}}/{{galeria.PathName}}" rel="gallery" class="pirobox_gall{{IdGalery}}" title="{{galeria.Title}}">
                            <img src="{{app.path}}/{{theme}}/{{galeria.PathNameThumbnail}}" alt="{{galeria.Title}}" title="{{galeria.Title}}" />
                        </a>
                    </li>
                {% endfor %} 
            </ul>
            
            {% for galeria in galeriaFotos.restoImagenes %}
                <a href="{{app.path}}/{{theme}}/{{galeria.PathName}}" rel="gallery" class="pirobox_gall{{IdGalery}}" title="{{galeria.Title}}"></a>
            {% endfor %}
        </div>
        <div class="contenidoBottom"></div>

    </div>
{% endif %}