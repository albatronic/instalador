{% extends layout %}

{% block contenido %}
    <h2>{{macro.idioma('servicios') | upper}}</h2>        
    <ul id="contenedorServicios">
        {% for servicio in values.servicios%}
        <li>
            <h2>             
                <a href="{{servicio.Href.url}}" title="{{servicio.Titulo}}">
                    {% if servicio.PathNameImagenN(1) %}<img src="{{app.path}}/{{theme}}/{{servicio.PathNameImagenN(1)}}" alt="{{servicio.Titulo}}" title="{{servicio.Titulo}}" />{% endif %}
                    {% if servicio.PathNameImagenN(1) %}{{servicio.Titulo}}{% else %}<span class="marginTop">{{ servicio.Titulo }}</span>{% endif %}
                </a>
            </h2>
            <p>{{macro.recortaTexto(servicio.subtitulo,145)}}</p>
        </li>
        {% endfor %}
    </ul>    
{% endblock %}